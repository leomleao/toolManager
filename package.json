{
  "name": "rest-nestjs-postgres",
  "version": "1.0.0",
  "description": "CrudJS implemented as a REST API, using Nest and Postgres",
  "scripts": {
    "setup": "npm install",
    "dev": "nodemon",
    "prestart:prod": "tsc",
    "start": "node dist/server.js",
    "build": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "pretest": "npm run build",
    "test-only": "jest",
    "test": "npm run test-only",
    "heroku-postbuild": "tsc",
    "clean": "shx rm -rf node_modules/ dist/ docs/",
    "typedoc": "typedoc --out ./docs --mode modules --tsconfig ./tsconfig.json ./src/",
    "posttypedoc": "shx cp .nojekyll docs/.nojekyll"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crudjs/rest-nestjs-postgres.git"
  },
  "keywords": [],
  "author": "David Guijarro <guijarro.dav@gmail.com>",
  "license": "Apache 2.0",
  "bugs": {
    "url": "https://github.com/crudjs/rest-nestjs-postgres/issues"
  },
  "homepage": "https://github.com/crudjs/rest-nestjs-postgres#readme",
  "engines": {
    "node": "8.9.1",
    "npm": "6.1.0"
  },
  "dependencies": {
    "@nestjs/common": "^4.0.0",
    "@nestjs/core": "^4.0.0",
    "@nestjs/microservices": "^4.0.0",
    "@nestjs/testing": "^4.0.0",
    "@nestjs/websockets": "^4.0.0",
    "body-parser": "^1.18.2",
    "class-transformer": "^0.1.8",
    "class-validator": "^0.7.2",
    "pg": "^7.3.0",
    "reflect-metadata": "^0.1.10",
    "rxjs": "^5.4.0",
    "slug": "^0.9.1",
    "typeorm": "^0.1.0",
    "typescript": "^2.5.2",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@types/express": "^4.0.37",
    "@types/jest": "^21.1.2",
    "@types/node": "^8.0.28",
    "@types/slug": "^0.9.0",
    "dotenv": "^5.0.1",
    "jest": "^21.2.1",
    "nodemon": "^1.17.5",
    "ts-jest": "^21.1.2",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "typedoc": "^0.11.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": ".*\\.spec.(ts|tsx|js)$"
  }
}
