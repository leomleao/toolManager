{
  "name": "toolManagerAPI",
  "version": "1.0.0",
  "description": "API and react app for tool management",
  "scripts": {
    "postbuild": "tsc",
    "setup": "npm install",
    "dev": "nodemon",
    "start": "node ./dist/server.js",
    "build": "tslint -c tslint.json './src/**/*.{ts,tsx}'",
    "pretest": "npm run build",
    "test-only": "jest",
    "test": "npm run test-only",
    "heroku-postbuild": "tsc",
    "clean": "shx rm -rf node_modules/ dist/ docs/",
    "typedoc": "typedoc --out ./docs --mode modules --tsconfig ./tsconfig.json ./server/src/",
    "posttypedoc": "shx cp .nojekyll docs/.nojekyll"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leomleao/toolManager.git"
  },
  "keywords": [],
  "author": "Leo Leao <leomleao@gmail.com>",
  "license": "Apache 2.0",
  "bugs": {
    "url": "https://github.com/leomleao/toolManager-postgres/issues"
  },
  "homepage": "https://github.com/leomleao/toolManager#readme",
  "engines": {
    "node": "8.9.1",
    "npm": "6.1.0"
  },
  "dependencies": {
    "@nestjs/common": "^4.6.6",
    "@nestjs/core": "^4.6.6",
    "@nestjs/microservices": "^4.6.6",
    "@nestjs/testing": "^4.6.6",
    "@nestjs/websockets": "^4.6.6",
    "body-parser": "^1.18.3",
    "class-transformer": "^0.1.9",
    "class-validator": "^0.7.3",
    "pg": "^7.4.3",
    "qrcode": "^1.2.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^5.5.11",
    "slug": "^0.9.1",
    "ts-stream": "^1.0.1",
    "typeorm": "^0.1.21",
    "typescript": "^2.8.3",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@types/express": "^4.11.1",
    "@types/jest": "^21.1.10",
    "@types/node": "^8.10.17",
    "@types/slug": "^0.9.0",
    "dotenv": "^5.0.1",
    "jest": "^21.2.1",
    "nodemon": "^1.17.5",
    "shx": "^0.2.2",
    "ts-jest": "^21.2.4",
    "ts-node": "^3.3.0",
    "tslint": "^5.10.0",
    "typedoc": "^0.11.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.(ts)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": ".*\\.spec.(ts|js)$"
  }
}
